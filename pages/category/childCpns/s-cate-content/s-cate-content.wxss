
.cate-content {
  border: 0px solid red;
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.ct-scroll {
  flex: 1;
  width: 100%;
  height: 100%;
}

.subcategory {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between
}

.sub-item {
  width: 30%;
  /* margin: 0px 11rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 0px solid red;
  margin-bottom: 20rpx;
}

.sub-item-image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.sub-item-text {
  font-size: 26rpx;
  color: #777777;
}
