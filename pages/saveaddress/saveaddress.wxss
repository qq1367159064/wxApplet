
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.add-address {
  width: 100%;
  height: 100%;
  border: 0px solid red;
  box-sizing: border-box;
}


.add-from {
  box-sizing: border-box;
  margin-top: 20rpx;
  padding: 0px 16rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.s-from-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  border-bottom: 1px solid #cccccc;
  padding: 15rpx 0;
}

.sf-text {
  font-size: 35rpx;
  opacity: 1;
  margin-right: 30rpx;
  font-weight: 545;
}

.sf-input-css {
  font-size: 26rpx;
}

.picker-select {
  font-size: 30rpx;
}

.picker-select > text {
  margin-right: 30rpx;
}


.add-subbootom {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  margin-top: 30rpx;
}

.add-subbootom button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0px !important ;
  font-size: 30rpx;
  background-color: red;
  color: #ffffff;
  width: 500rpx;
  height: 65rpx;
  border-radius: 32.5rpx;
}

.deleteAddress {
  display: flex;
  margin-top: 50rpx;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}

.deleteAddress text {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  margin-left: 20rpx;
  height: 100%;
  padding: 2rpx 20rpx;
  border-radius: 30rpx;
  background-color: red;
  color: #ffffff;
}