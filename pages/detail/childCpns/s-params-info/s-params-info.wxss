.arg-image {
  display: none;
}

.arg-image > .p-img {
  width: 100%;
}

.params-info {
  margin-top: 30rpx;
  padding-bottom: 56rpx;
  border-bottom: 17rpx solid #f2f2f2;
}

.top {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top-items {
  flex: 1;
  padding: 20rpx 25rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f2f2f2;
  align-items: center;
  font-size: 26rpx;
  color: #777;
}

.item {
  flex: 1;
}

.up {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.up-bd {
  flex: 1;
  font-size: 26rpx;
  color: #777;
  padding: 20rpx 25rpx;
  border-bottom: 1px solid #f2f2f2;
  display: flex;
  flex-direction: row;
}

.bd-key {
  width: 23%;
}

.bd-value {
  flex: 1;
  color: #f55777;
}
