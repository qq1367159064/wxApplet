.shopInfo {
  display: flex;
  flex-direction: column;
  padding: 0rpx 16rpx;
  margin-top: 25rpx;
  padding-bottom: 56rpx;
  border-bottom: 17rpx solid #f2f2f2;
}

.shop-hd {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.hd-logo {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #e6e6e6;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.hd-texd {
  font-size: 26rpx;
  color: #777;
}

.shop-bd {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}

.left, .right {
  flex: 1;
}

.left {
  display: flex;
  flex-direction: row;
  border-right: 1px solid #dedede;
}

.left-com {
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.com-number {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.com-text {
  font-size: 23rpx;
  color: #777;
}

.right {
  display: flex;
  flex-direction: column;
  border: 0px solid red;
}

.right-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 56rpx;
}

.item-left {
  font-size: 23rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.item-right {
  margin-right: 30rpx;
}

.text {
  margin-right: 20rpx;
  font-size: 26rpx;
}

.btter {
  color: #7cb758;
}

.nobtter {
  color: #ff748e;
}

.footer {
  margin-top: 67rpx;
}

.footer-button {
  font-size: 26rpx;
  font-weight: normal;
}
