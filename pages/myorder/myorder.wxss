page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #ccc;
}

.myorder {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.snas-css {
  font-size: 30rpx;
  padding-top: 20rpx;
  height: 120rpx !important;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

.myorder .myorder-scrollx {
  white-space: nowrap;
  box-sizing: border-box;
  width: 100%;
  height: calc(100% - 120rpx);
  border: 0px solid red;
}

