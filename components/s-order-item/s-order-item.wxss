
.order-item {
  box-sizing: border-box;
  /* margin-top: 50rpx; */
  width: 100%;
  border: 0px solid red;
  height: 350rpx;
  border-radius: 10rpx;
  padding: 10rpx 16rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}


.o-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 33rpx;
}

.top-stop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top-stop > image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}


.top-status {
  color: red;
}

.o-content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.items {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.item {
  border: 0px solid blue;
  flex: 1;
  box-shadow: 6rpx 0rpx 2rpx  #cccccc;
  white-space: nowrap;
  overflow: hidden;
}

.item image,.oneItme image {
  width: 166rpx;
  height: 166rpx;
  margin-right: 20rpx;
}

.price-count {
  width: 20%;
  height: 100%;
  border: 0px solid red;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  opacity: 0.7;
  justify-items: center;
  align-items: center;

}


.price {
  margin-bottom: 10rpx;
  color: red;
}

.oneItme {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
}

.decs {
  font-size: 30rpx;
  opacity: 0.7;
  margin-left: 20rpx;
  overflow: hidden;
  width: 330rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.o-up {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  opacity: 0.7;
  border: 0px solid red;
  justify-content: space-between
}

.btns {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  align-items: center;
}

.btns text {
 display: flex;
 flex-direction: row;
 justify-content: center;
 align-items: center;
 height: 100%;
 padding: 3rpx 30rpx;
 border: 1px solid #cccccc;
 margin-right: 20rpx;
 border-radius: 25rpx;
}