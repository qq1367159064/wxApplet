<swiper class="h-swiper the-swiper" 
        circular
        autoplay
        interval="3000"
        duration="300"
        indicator-dots
        indicator-active-color="#ff5777"> 
  <block wx:for="{{lists}}" wx:key="index" >
    <swiper-item class="swiper-item">
      <image src="{{item.image || item}}" />
    </swiper-item>
  </block>
</swiper>